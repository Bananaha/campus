include ../mixins/main

h2.module-title Création d'un utilisateur

.module-card

  form(name="utilisateursCreation",
    form,
    data-target="utilisateurs",
    ng-submit="submit($event)")

    .grid.pad

      .col-1
          +form-underlined("Nom")
            - opt = {}
            - opt.required = true
            - opt.ngModel = "model.nom"
            +input(opt)

      .col-1
          +form-underlined("Prénom")
            - opt = {}
            - opt.required = true
            - opt.ngModel = "model.prenom"
            +input(opt)

      .col-1
          +form-underlined("Adresse mail")
            - opt = {}
            - opt.type = "email"
            - opt.ngModel = "model.mail"
            +input(opt)

      .col-1
          +form-underlined("Mot de passe")
            - opt = {}
            - opt.type = "password"
            - opt.ngModel = "model.password"
            - opt.required = true
            +input(opt)

      .col-1
        .form-underlined-label.fixed Entités
        .checbox-container(ng-repeat="entite in constants.entites")
          - opt = {}
          - opt.label = "{{entite}}"
          - opt.ngModel = "model.entites[entite]"
          +custom-checkbox(opt)

      .col-1
          +form-underlined("Service")
            - opt = {}
            - opt.ngModel = "model.service"
            - opt.ngOptions = "service as service for service in constants.services"
            - opt.required = true
            +select(opt)

      .col-1
          +form-underlined("Droits d'accès")
            - opt = {}
            - opt.ngModel = "model.permission"
            - opt.ngOptions = "permission.id as permission.label for permission in constants.permission"
            - opt.required = true
            +select(opt)

    .module-footer
      include ../includes/modules/module-submit
