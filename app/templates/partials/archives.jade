include ../mixins/main

.module-card
  .module-header(affix, affix-offset=48)
    .affix-target
      .searchBox
        +form-underlined()
          input.search-input(type="search",
            ng-model="table.filters.search",
            required,
            placeholder="rechercher")
        button(type="button").btnIcon.search

      button.filters-toggler.btn(type="button",
        ng-class="{active: filtersOpen}"
        ng-click="toggleFilters()")
        | filtres
        span(ng-if="filtersCount") ({{filtersCount}})

      filters(filters="table.filters.filters",
        settings="filtersSettings",
        count="filtersCount"
        open="filtersOpen")

  div(affix, affix-offset=96)
    .table.listed(table="table.config",
      table-filters="table.filters")

