include ../mixins/main

.grid.pad

  .col-1
    .module-card

      .actionDetails

        .module-header(affix, affix-offset=48)
          .affix-target
            p.actionDetails-id \#{{accompagnement.action}} - {{accompagnement.auteur}}
            h2 {{accompagnement.intitule}}
            button(ng-click="modifier()").module-header-action.btnIcon.circle.big.modify

        ul.actionDetails-list
          li(ng-repeat="item in accompagnement.list")
            span.actionDetails-label {{item.label}}
            span.actionDetails-value {{item.value}}          

  .col-1-2
    .module-card
      .module-header
        h2 Participants

      user-list(users="model.participants", ng-if="showUsers")

  .col-1-2
    .module-card
      .module-header
        h2 Formateurs

      user-list(users="model.formateurs", ng-if="showUsers")

  .col-1
    .module-card
      .module-header
        h2 Coût de l'accompagnement
      .grid.pad
        .col-1-2
          p Coût salarial : 
            span 10000€
        .col-1-2
          p Coût pédagogique : 
            span 10000€

    
      
        
