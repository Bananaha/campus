include ../mixins/main

.grid.pad

  .col-1
    .module-card

      .actionDetails

        .module-header(affix, affix-offset=48)
          .affix-target
            p.actionDetails-id \#{{accompagnement.action}} - {{accompagnement.auteur}}
            h2 {{accompagnement.intitule}}
            a(ng-href="#/accompagnements/{{accompagnement.id}}/modifier").module-header-action.btnIcon.circle.big.modify

        ul.actionDetails-list
          li(ng-repeat="item in accompagnement.list")
            span.actionDetails-label {{item.label}}
            span.actionDetails-value {{item.value}}

  .col-1-2
    .module-card
      .module-header
        h2 Participants

      user-list(users="model.participants", ng-if="showUsers")

  .col-1-2
    .module-card
      .module-header
        h2 Formateurs

      user-list(users="model.formateurs", ng-if="showUsers")

  .col-1
    .module-card
      .module-header
        h2 Coût de l'accompagnement
      .grid
        .col-1-2(ng-if="accompagnement.cout")
          .accompagnement-cout
            span.accompagnement-cout-label Coût salarial
            span.accompagnement-cout-number {{accompagnement.cout.salarial}}€
        .col-1-2(ng-if="accompagnement.cout")
          .accompagnement-cout
            span.accompagnement-cout-label Coût pédagogique
            span.accompagnement-cout-number {{accompagnement.cout.pedagogique}}€




